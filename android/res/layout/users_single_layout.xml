<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:id="@+id/user_single_">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_single_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/defaul_av_imag"
        />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:text="@string/user_name"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:text="@string/status_status"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/user_single_onoff"
        android:layout_width="15dp"
        android:layout_height="15dp"

        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@+id/user_single_name"
        android:background="@drawable/onoff_design"
        android:visibility="invisible"

        />
</RelativeLayout>